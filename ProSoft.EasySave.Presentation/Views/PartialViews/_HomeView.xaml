<UserControl x:Class="ProSoft.EasySave.Presentation.Views.PartialViews._HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProSoft.EasySave.Presentation.Views.PartialViews"
        xmlns:muxc="http://schemas.modernwpf.com/2019"
        MaxHeight="1080" MaxWidth="1920" MinHeight="800" MinWidth="600"
        mc:Ignorable="d">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.RowSpan="3" Grid.Column="0">
            <muxc:NavigationView x:Name="nvSample"
                               Height="{Binding screenHeight}"
                               PaneDisplayMode="Auto"
                               IsTabStop="False"
                               SelectionChanged="NavigationView_SelectionChanged5">
                <muxc:NavigationView.MenuItems>
                    <muxc:NavigationViewItem Content="_HomeView" Tag="_HomeView" Icon="Home" />
                    <muxc:NavigationViewItem Content="_SaveView" Tag="_SaveView" Icon="Save" />
                    <muxc:NavigationViewItem Content="_ConfView" Tag="_ConfigView" Icon="Find" />
                </muxc:NavigationView.MenuItems>
            </muxc:NavigationView>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
            <TextBlock FontSize="30" HorizontalAlignment="Center">Welcome</TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" >
            <TextBlock FontSize="20">Save/Backup in progress :</TextBlock>

            <Grid>
                <DataGrid AutoGenerateColumns="False">
                    <!-- FAIRE ITEMSOURCE + BINDING -->
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" FontFamily="Arial" FontStyle="Italic" />
                        <DataGridTextColumn Header="Time"  FontFamily="Arial" FontWeight="Bold" />
                        <DataGridTextColumn Header="FileSource"  FontFamily="Arial" FontWeight="Bold" />
                        <DataGridTextColumn Header="FileTarget"  FontFamily="Arial" FontWeight="Bold" />
                        <DataGridTextColumn Header="File size (o)"  FontFamily="Arial" FontWeight="Bold" />
                        <DataGridTextColumn Header="File transfert time"  FontFamily="Arial" FontWeight="Bold" />
                        <DataGridTextColumn Header="File crypt time"  FontFamily="Arial" FontWeight="Bold" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

        </StackPanel>
    </Grid>
</UserControl>